<Window x:Class="addressbook.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:addressbook"
        mc:Ignorable="d"
        Title="AddressBook" Height="350" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>


        <Border Grid.Column="0" BorderBrush="#D6D6D6" CornerRadius="10" BorderThickness="0" Background="#D6D6D6" Margin="20 20 2 20">
            <ListView x:Name="lvContacts" Grid.Row="0" Margin="15" BorderThickness="0" Background="#F5F5F5" HorizontalContentAlignment="Stretch">
        <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Margin="1" Text="Texten kommer här: "/>
                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <Button x:Name="btnDelete" Style="{StaticResource symbolButton}" FontFamily="Segoe MDL2 Assets" Content="&#xE74D;" Margin="0 0 10 0" />
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
            </ListView>
            
        </Border>
        <TextBlock Text="Contacts:" Margin="40 20 20 5" />
        <TextBlock Text="Delete:" Margin="100 20 22 5"  HorizontalAlignment="Right"/>
        <Border Grid.Column="1" BorderBrush="#D6D6D6" CornerRadius="10" BorderThickness="0" Background="#D6D6D6" Margin="2 20 2 20">
          <StackPanel Grid.Column="1" Background="#D6D6D6" Margin="5 5 5 20">
                <TextBlock Text="First Name:" FontSize="10" FontWeight="Bold" Margin="5 0 5 0"/>
                <TextBox x:Name="tbFirstName" BorderThickness="0" Margin="5 0 5 5"/>
                <TextBlock Text="Last Name:" FontSize="10" FontWeight="Bold" Margin="5 0 5 0"/>
                <TextBox x:Name="tbLastName"  Margin="5 0 5 5"/>
                <TextBlock Text="Phone number:" FontSize="10" FontWeight="Bold" Margin="5 0 5 0"/>
                <TextBox x:Name="tbPhoneNumber"  Margin="5 0 5 5"/>
                <TextBlock Text="Email:" FontSize="10" FontWeight="Bold" Margin="5 0 5 0"/>
                <TextBox x:Name="tbEmail"  Margin="5 0 5 5"/>
                <TextBlock Text="Street Address:" FontSize="10" FontWeight="Bold" Margin="5 0 5 0"/>
                <TextBox x:Name="tbStreetAddress"  Margin="5 0 5 5"/>
                <TextBlock Text="Postal Code:" FontSize="10" FontWeight="Bold" Margin="5 0 5 0"/>
                <TextBox x:Name="tbPostalCode"  Margin="5 0 5 5"/>
                <TextBlock Text="City:" FontSize="10" FontWeight="Bold" Margin="5 0 5 0"/>
                <TextBox x:Name="tbCity"  Margin="5 0 5 5"/>
            </StackPanel>
        </Border>
        <Border Grid.Column="2"  BorderBrush="#D6D6D6" CornerRadius="10" BorderThickness="0" Background="#D6D6D6" Margin="2 20 20 20">
            <StackPanel Margin="0" Background="Transparent">
                <Button x:Name="btnClearInfo" Content="CLEAR ADDRESS FIELDS" Style="{StaticResource defultButton}" Margin="5 30"/>
            </StackPanel>
        </Border>
        <StackPanel Grid.Column="2" Margin="2 20 20 20">
            <Button x:Name="btnSaveChanges" Content="SAVE CHANGES" Style="{StaticResource defultButton}" Margin="5 100 5 5"/>
        </StackPanel>
        <StackPanel Grid.Column="2" Margin="2 20 20 20">
            <Button x:Name="btnSaveNewContact" Content="ADD CONTACT" Style="{StaticResource defultButton}" Margin="5 130"/>
        </StackPanel>

    </Grid>
</Window>
